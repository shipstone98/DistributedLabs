@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This application provides a view for calling different API methods, from the Distributed Systems Programming Lab 5.</a>.</p>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Input a string to translate from English to Pig Latin:</label>
                <input name="textInput" class="form-control" />
            </div>
            <div class="form-group">
                <input name="translateButton" type="button" value="Translate" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label name="outputLabel" class="control-label"></label>
            </div>
        </form>
    </div>
</div>
